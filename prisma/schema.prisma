generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Group {
  id          String   @id
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  bookmarks   Bookmark[]
  themes      Theme[]

  @@map("groups")
}

model Bookmark {
  id               String    @id
  groupId          String    @map("group_id")
  title            String
  url              String
  category         String
  memo             String?
  address          String?
  latitude         Float?
  longitude        Float?
  placeName        String?   @map("place_name")
  priority         Int       @default(3)
  visited          Boolean   @default(false)
  visitedAt        DateTime? @map("visited_at")
  autoTitle        String?   @map("auto_title")
  autoDescription  String?   @map("auto_description")  
  autoImageUrl     String?   @map("auto_image_url")
  autoSiteName     String?   @map("auto_site_name")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  bookmarkThemes BookmarkTheme[]

  @@index([groupId])
  @@index([category])
  @@index([visited])
  @@index([priority])
  @@index([createdAt])
  @@index([url])
  @@map("bookmarks")
}

model Theme {
  id        String   @id
  groupId   String   @map("group_id")
  name      String
  icon      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  bookmarkThemes BookmarkTheme[]

  @@index([groupId])
  @@index([createdAt])
  @@map("themes")
}

model BookmarkTheme {
  bookmarkId String   @map("bookmark_id")
  themeId    String   @map("theme_id")
  createdAt  DateTime @default(now()) @map("created_at")
  
  bookmark Bookmark @relation(fields: [bookmarkId], references: [id], onDelete: Cascade)
  theme    Theme    @relation(fields: [themeId], references: [id], onDelete: Cascade)

  @@id([bookmarkId, themeId])
  @@index([bookmarkId])
  @@index([themeId])
  @@map("bookmark_themes")
}
